@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.ProfileImage" class="form-control" />
                <label asp-for="Input.ProfileImage" class="form-label"></label>
                <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
                
            </div>

            <div class="form-floating">
                <input asp-for="Input.BackgroundImage" class="form-control" />
                <label asp-for="Input.BackgroundImage" class="form-label"></label>
                <span asp-validation-for="Input.BackgroundImage" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <p>Current Main Image</p>
        <div max-width="200px" max-height="150px">
            <img src="@Model.Input.MainImagePath" width="100%" max-height="100%" />
        </div>
        <p>Current background Image</p>
        <div max-width="200px" max-height="150px">
             <img src="@Model.Input.MainImagePath" width="100%" max-height="100%"/>
        </div>
       
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
